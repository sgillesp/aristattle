<h1>Sign up for an account:</h1>


<%= form_for @user do |f| %>
    <%= render 'shared/error_messages' %>

    <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </p>    
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>
    <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %>
	</p>
    <p>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
    </p>
  
    <%= f.submit "Create my account" %>
<% end %>   